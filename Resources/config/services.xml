<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="elcweb.salesforce.manager.class">Elcweb\SalesforceBundle\Manager\SalesforceManager</parameter>
    </parameters>

    <services>
        <service id="elcweb.salesforce.manager" class="%elcweb.salesforce.manager.class%">
            <argument type="service" id="phpforce.soap_client" />
            <argument type="service" id="memcache.default" />
            <argument>900</argument>
        </service>
    </services>
</container>
