<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="elcweb.salesforce.manager.class">Elcweb\SalesforceBundle\Manager\SalesforceManager</parameter>
    </parameters>

    <services>
        <service id="elcweb.salesforce.soap.wsdl" class="Phpforce\SoapClient\Soap\WSDL\Wsdl">
            <argument>%elcweb.salesforce.soap.config.wsdl%</argument>
        </service>

        <service id="elcweb.salesforce.soap.factory" class="Phpforce\SoapClient\ClientFactory">
            <argument type="service" id="elcweb.salesforce.soap.wsdl" />
            <argument>%elcweb.salesforce.soap.config.username%</argument>
            <argument>%elcweb.salesforce.soap.config.password%</argument>
            <argument>%elcweb.salesforce.soap.config.token%</argument>
            <call method="withLog">
                <argument type="service" id="logger" />
            </call>
<!--            <call method="withCache">
                <argument type="service" id="???" />
            </call>-->
        </service>

        <service id="elcweb.salesforce.manager" class="%elcweb.salesforce.manager.class%">
            <argument type="service" id="elcweb.salesforce.soap.factory" />
            <argument type="service" id="memcache.default" />
            <argument>%elcweb.salesforce.soap.config.ttl%</argument>
        </service>
    </services>
</container>
